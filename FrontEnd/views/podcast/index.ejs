<!DOCTYPE html>
<html lang="fa" dir="rtl" class="bg-background w-screen overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
      <link rel="stylesheet" href="/styles/swiper.css" />
      <link rel="stylesheet" href="/styles/tailwind.css" />
      <link rel="icon" href="/logo/icon.png">
    <title>Ritmo Podcast</title>
  </head>
  <body class="w-screen overflow-x-hidden text-white select-none max-w-[1688px] mx-auto">

    <%- include('../partials/svg.ejs') %>

    <%- include('../partials/header.podcast.ejs') %>

    <main class="main-site px-5 lg:px-8 h-auto lg:mt-40 mt-24 ms-auto max-w-[1600px]">
      <!-- trending podcast -->
      <section class="h-auto">
        <!-- head -->
        <div class="flex items-center justify-between w-full mb-8">
          <h3 class="font-Pelak_Bold text-base md:text-xl">اپیزودهای ترند</h3>
          <div class="flex items-center justify-between gap-x-3">
            <span
              class="prev-trending-episode flex items-center justify-center cursor-pointer size-5 sm:size-8"
            >
              <svg class="size-3 sm:size-4 md:size-5"><use href="#chevron-right"></use></svg>
            </span>
            <span
              class="next-trending-episode flex items-center justify-center cursor-pointer size-5 sm:size-8"
            >
              <svg class="size-3 sm:size-4 md:size-5 transform rotate-180">
                <use href="#chevron-right"></use>
              </svg>
            </span>
          </div>
        </div>
        <!-- body -->
        <div class="swiper w-88-h-34 trending-episode-swiper">
          <div
            id="trending-sung-container"
            class="swiper-wrapper **:rounded-3xl"
          ></div>
        </div>
      </section>

      <!-- Last heard -->
      <section class="mt-14">
        <!-- head -->
        <h3 class="font-Pelak_Bold text-base md:text-xl">آخرین شنیده‌ها</h3>
        <!-- body -->
        <div class="flex flex-col gap-x-5 mt-10">
          <div
            id="lest-heard-music-container"
            class="grid grid-cols-1 2xl:grid-cols-2 gap-x-10"
          ></div>

          <div
            class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 mb-10 gap-x-5 items-center w-full"
          >
            <div
              class="flex items-center w-full justify-between px-4 bg-menu h-16 rounded-xl mt-4"
            >
              <div class="flex gap-x-2 items-center">
                <span class="text-Neutral-300 text-sm">مورد علاقه‌ها: </span>
                <data value="102" class="font-FA_Pelak_Bold text-lg">12</data>
              </div>
              <div>
                <svg class="size-8 text-Neutral-200">
                  <use href="#heart"></use>
                </svg>
              </div>
            </div>

            <div
              class="flex items-center w-full justify-between px-4 bg-menu h-16 rounded-xl mt-4"
            >
              <div class="flex gap-x-2 items-center">
                <span class="text-Neutral-300 text-sm">دانلودها:</span>
                <data value="247" class="font-FA_Pelak_Bold text-lg">6</data>
              </div>
              <div>
                <svg class="size-8 text-Neutral-200">
                  <use href="#download-01"></use>
                </svg>
              </div>
            </div>

            <div
              class="flex items-center w-full justify-between px-4 bg-menu h-16 rounded-xl mt-4"
            >
              <div class="flex gap-x-2 items-center">
                <span class="text-Neutral-300 text-sm">دقایق گوش داده: </span>
                <data value="247" class="font-FA_Pelak_Bold text-lg">669</data>
              </div>
              <div>
                <svg class="size-8 text-Neutral-200">
                  <use href="#clock"></use>
                </svg>
              </div>
            </div>

            <div
              class="flex items-center w-full justify-between px-4 bg-menu h-16 rounded-xl mt-4"
            >
              <div class="flex gap-x-2 items-center">
                <span class="text-Neutral-300 text-sm">استرایک :</span>
                <data value="247" class="font-FA_Pelak_Bold text-lg">2</data>
              </div>
              <div>
                <svg class="size-8 text-Neutral-200">
                  <use href="#bolt"></use>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- top channels -->
      <section class="mt-14">
        <!-- head -->
        <div class="flex items-center justify-between w-full mb-8">
          <h3 class="font-Pelak_Bold text-base md:text-xl">چنل‌های برتر</h3>
          <div class="flex items-center justify-between w-16 sm:w-20">
            <span
              class="prev-channel flex items-center justify-center cursor-pointer size-5 sm:size-8"
            >
              <svg class="size-3 sm:size-4 md:size-5"><use href="#chevron-right"></use></svg>
            </span>
            <span
              class="next-channel flex items-center justify-center cursor-pointer size-5 sm:size-8"
            >
              <svg class="size-3 sm:size-4 md:size-5 transform rotate-180">
                <use href="#chevron-right"></use>
              </svg>
            </span>
          </div>
        </div>
        <!-- body -->
        <div class="swiper channel-swiper w-50-h-50">
          <div id="trending-singer-container" class="swiper-wrapper"></div>
        </div>
      </section>

      <!-- video cast -->
      <section class="mt-14">
        <!-- head -->
        <div class="flex items-center justify-between w-full mb-8">
          <h3 class="font-Pelak_Bold text-base md:text-xl">ویدئوکست‌ها</h3>
          <div class="flex items-center gap-x-6">
            <div class="flex items-center justify-between gap-x-3">
              <span
                class="prev-video-cast flex items-center justify-center cursor-pointer size-5 sm:size-8"
              >
                <svg class="size-3 sm:size-4 md:size-5"><use href="#chevron-right"></use></svg>
              </span>
              <span
                class="next-video-cast flex items-center justify-center cursor-pointer size-5 sm:size-8"
              >
                <svg class="size-3 sm:size-4 md:size-5 transform rotate-180">
                  <use href="#chevron-right"></use>
                </svg>
              </span>
            </div>

            <a
              href="./Podcast/VideoCast/VideoCast.html"
              class="font-Pelak_Medium text-base text-Neutral-300"
              >مشاهده‌ی همه</a
            >
          </div>
        </div>
        <!-- body -->
        <div class="swiper video-cast-swiper w-92-h-34">
          <div id="video-music-container" class="swiper-wrapper"></div>
        </div>
      </section>

      <!-- Categories -->
      <section class="mt-14">
        <!-- head -->
        <div class="flex items-center justify-between w-full mb-8">
          <h3 class="font-Pelak_Bold text-base md:text-xl">دسته بندی‌ها</h3>
          <div class="flex items-center gap-x-6">
            <div class="flex items-center justify-between gap-x-3">
              <span
                class="prev-Category flex items-center justify-center cursor-pointer size-5 sm:size-8"
              >
                <svg class="size-3 sm:size-4 md:size-5"><use href="#chevron-right"></use></svg>
              </span>
              <span
                class="next-Category flex items-center justify-center cursor-pointer size-5 sm:size-8"
              >
                <svg class="size-3 sm:size-4 md:size-5 transform rotate-180">
                  <use href="#chevron-right"></use>
                </svg>
              </span>
            </div>

            <a
              href="./Podcast/Categories/Categories.html"
              class="font-Pelak_Medium text-base text-Neutral-300"
              >مشاهده‌ی همه</a
            >
          </div>
        </div>
        <!-- body -->
        <div class="swiper Category-swiper">
          <div id="category-container" class="swiper-wrapper"></div>
        </div>
      </section>
    </main>


    <%- include('../partials/footer.ejs') %>


    <script src="/scripts/navbar/music/navbar.js"></script>
  </body>
</html>

    <main class="mt-30 text-white max-w-[1440px] mx-auto h-auto">
      <!-- head -->
        <section class="head max-w-[1016px] mx-auto h-auto mb-19">
            <h2 class="font-Pelak_Bold text-[32px]/[150%] mb-16 mx-auto text-center">پلن‌های اشتراک</h2>
            <div class="flex gap-x-6 gap-y-[5rem] flex-col md:flex-row *:w-auto *:sm:w-[496px] px-4 *:max-w-[496px]">

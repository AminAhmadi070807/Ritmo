<!DOCTYPE html>
<html lang="fa" dir="rtl" class="bg-background w-screen overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
      <link rel="stylesheet" href="/styles/swiper.css" />
      <link rel="stylesheet" href="/styles/tailwind.css" />
      <link rel="icon" href="/logo/icon.png">
    <title>Ritmo category </title>
  </head>

  <body class="w-screen overflow-x-hidden text-white select-none max-w-[1688px] mx-auto">

    <%- include('../partials/svg.ejs') %>

    <%- include('../partials/header.music.ejs') %>

    <main class="main-site mt-18 md:mt-24 ms-auto h-auto max-w-[1600px]">
      <!-- category header -->
      <section id="header-category" class="relative h-[650px] md:h-100 w-full">
          <img src="<%= category.cover %>" class="w-full h-full object-cover" alt="">
          <div class="absolute inset-0 m-auto size-full bg-[#0D0D0E]/75 pe-4 pt-10">
              <div class="flex flex-col md:flex-row items-center gap-x-8 ms-8">
                  <div class="relative size-[288px] rounded-lg min-w-[288px] min-h-[288px]">
                      <img src="<%= category.cover %>" class="size-[288px] rounded-lg min-w-[288px] min-h-[288px]" alt="<%= category.title %>">
                  </div>
                  <div class="max-w-[624px] w-full">
                      <h3 class="font-Pelak_Bold text-[40px] text-center md:text-right "><%= category.title %></h3>
                      <p class="font-Pelak_Regular text-Neutral-100 mt-8 text-base/loose md:text-justify text-center"><%= category.description %></p>
                  </div>
              </div>
          </div>
      </section>

      <!-- trending singer -->
      <section class="mt-14 px-5 lg:px-8 h-auto">
        <!-- head -->
        <div class="flex items-center justify-between w-full mb-8">
          <h3 class="font-Pelak_Bold text-base md:text-xl">خواننده ترند</h3>
          <div class="flex items-center justify-between w-16 sm:w-20">
            <span class="prev-trending-singer flex items-center border border-gray-500 rounded-full justify-center cursor-pointer size-5 sm:size-8">
              <svg class="size-6"><use href="#chevron-right"></use></svg>
            </span>
            <span class="next-trending-singer flex items-center justify-center border border-gray-500 rounded-full cursor-pointer size-5 sm:size-8">
              <svg class="size-6 transform rotate-180">
                <use href="#chevron-right"></use>
              </svg>
            </span>
          </div>
        </div>
        <!-- body -->
        <div class="swiper trending-singer-swiper">
          <div id="trending-singer-container" class="swiper-wrapper"></div>
        </div>
      </section>

      <!-- news-->
      <section class="mt-14 px-5 lg:px-8 h-auto">
        <!-- head -->
        <div class="flex items-center justify-between w-full mb-8">
          <h3 id="new-artist" class="font-Pelak_Bold text-base md:text-xl">تازه‌های</h3>
          <div class="flex items-center justify-between w-16 sm:w-20">
            <span class="prev-album flex items-center justify-center cursor-pointer size-5 sm:size-8 border border-gray-500 rounded-full"><svg class="size-6"><use href="#chevron-right"></use></svg></span>
            <span class="next-album flex items-center justify-center cursor-pointer size-5 sm:size-8 border border-gray-500 rounded-full"><svg class="size-6 transform rotate-180"><use href="#chevron-right"></use></svg></span>
          </div>
        </div>
        <!-- body -->
        <div class="swiper pop-news">
          <div id="pop-news-container" class="swiper-wrapper"></div>
        </div>
      </section>

      <!-- trending sung -->
      <section class="mt-14 px-5 lg:px-8 h-auto">
        <!-- head -->
        <div class="flex items-center justify-between w-full mb-8">
          <h3 class="font-Pelak_Bold text-base md:text-xl">آهنگ‌های ترند</h3>
          <div class="flex items-center justify-between w-16 sm:w-20">
            <span class="prev-trending-sung flex items-center justify-center cursor-pointer size-5 sm:size-8 border border-gray-500 rounded-full"><svg class="size-6"><use href="#chevron-right"></use></svg></span>
            <span class="next-trending-sung flex items-center justify-center cursor-pointer size-5 sm:size-8 border border-gray-500 rounded-full"><svg class="size-6 transform rotate-180"><use href="#chevron-right"></use></svg></span>
          </div>
        </div>
        <!-- body -->
        <div class="swiper category-trending-sung-swiper">
          <div
            id="category-trending-sung-container"
            class="swiper-wrapper"
          ></div>
        </div>
      </section>

      <!-- selected playlist -->
      <section class="mt-14 px-5 lg:px-8 h-auto">
        <!-- head -->
        <div class="flex items-center justify-between w-full mb-8">
          <h3 class="font-Pelak_Bold text-base md:text-xl">پلی لیست منتخب</h3>
          <div class="flex items-center justify-between w-16 sm:w-20">
            <span class="prev-playlist flex items-center justify-center cursor-pointer size-5 sm:size-8 border border-gray-500 rounded-full"><svg class="size-6"><use href="#chevron-right"></use></svg></span>
            <span class="next-playlist flex items-center justify-center cursor-pointer size-5 sm:size-8 border border-gray-500 rounded-full"><svg class="size-6 transform rotate-180"><use href="#chevron-right"></use></svg></span>
          </div>
        </div>
        <!-- body -->
        <div class="swiper category-playlist-swiper">
          <div id="all-playlist" class="swiper-wrapper"></div>
        </div>
      </section>

      <!-- all artist of this style -->
      <section class="mt-14 px-5 lg:px-8 h-auto">
        <!-- head -->
        <div class="flex items-center justify-between w-full mb-8">
          <h3 class="font-Pelak_Bold text-base md:text-xl">تمامی آرتیست‌های این سبک</h3>
          <a href="/musics/artists" class="font-Pelak_Medium text-base text-Neutral-300">مشاهده‌ی همه</a>
        </div>
        <!-- body -->
        <div class="swiper category-all-artist-swiper">
          <div id="all-artist" class="swiper-wrapper"></div>
        </div>
      </section>

      <!-- All songs from this genre -->
      <section class="mt-18 px-5 lg:px-8 h-auto">
        <!-- head -->
        <div class="flex items-center gap-x-4 justify-between mb-8">
          <h3 class="font-Pelak_Bold text-xl">تمامی آهنگ‌ها از این سبک</h3>
        </div>
        <!-- body -->
        <div id="all-song" class="flex flex-wrap items-center justify-center gap-x-5 gap-y-6"></div>

        <div id="add-song" class="flex items-center justify-center size-10 border border-Neutral-200 rounded-full mt-19 mx-auto cursor-pointer" >
          <svg class="size-5"><use href="#chevron-double-down"></use></svg>
        </div>
      </section>
    </main>

    <%- include('../partials/footer.ejs') %>

    <script src="/scripts/navbar/music/navbar.js"></script>
    <script src="/scripts/swiper/swiper.js"></script>
    <script src="/scripts/swiper/slider.js"></script>
    <script src="/scripts/categories/categoryDetails.js"></script>
  </body>
</html>

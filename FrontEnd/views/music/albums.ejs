<!DOCTYPE html>
<html lang="fa" dir="rtl" class="bg-background w-screen overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
      <link rel="stylesheet" href="/styles/swiper.css" />
      <link rel="stylesheet" href="/styles/tailwind.css" />
      <link rel="icon" href="/logo/icon.png">
    <title>Ritmo Albums</title>
  </head>

  <body class="w-screen overflow-x-hidden text-white select-none max-w-[1688px] mx-auto">
    <!-- all icons -->
    <svg class="hidden">
      <!-- chevron-down -->
      <symbol
        id="chevron-down"
        viewBox="0 0 10 6"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M0.833008 1.33337L4.99967 4.66671L9.16634 1.33337"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </symbol>

      <!-- chevron-right -->
      <symbol
        id="chevron-right"
        viewBox="0 0 4 7"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M0.5 6.41669L3.5 3.50002L0.5 0.583354"
          stroke="white"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </symbol>

      <!-- chevron-double-down -->
      <symbol
        id="chevron-double-down"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m4.5 5.25 7.5 7.5 7.5-7.5m-15 6 7.5 7.5 7.5-7.5"
        />
      </symbol>

      <!-- currentColor -->
    </svg>

    <%- include('../partials/svg.ejs') %>

    <%- include('../partials/header.music.ejs') %>

    <main class="main-site px-5 lg:px-8 lg:mt-40 mt-24 ms-auto h-auto max-w-[1600px]" >
      <!-- trending artist -->
      <section class="mt-16">
        <!-- head -->
        <div class="flex items-center gap-x-4 justify-between mb-8">
          <h3 class="font-Pelak_Bold text-xl">آلبوم‌های ترند</h3>
          <div class="flex items-center gap-x-4">
            <span class="next-trending-album">
              <svg class="size-4"><use href="#chevron-right"></use></svg>
            </span>
            <span class="prev-trending-album">
              <svg class="size-4 transform rotate-180">
                <use href="#chevron-right"></use>
              </svg>
            </span>
          </div>
        </div>
        <!-- body -->
        <div class="swiper trending-album-swiper">
          <div id="trending-album-container" class="swiper-wrapper"></div>
        </div>
      </section>

      <!-- Recently published album -->
      <section class="mt-16">
        <!-- head -->
        <div class="flex items-center gap-x-4 justify-between mb-8">
          <h3 class="font-Pelak_Bold text-xl">اخیرا منتشر شده</h3>
          <div class="flex items-center gap-x-4">
            <span class="next-Recently-Published-Album">
              <svg class="size-4"><use href="#chevron-right"></use></svg>
            </span>
            <span class="prev-Recently-Published-Album">
              <svg class="size-4 transform rotate-180">
                <use href="#chevron-right"></use>
              </svg>
            </span>
          </div>
        </div>
        <!-- body -->
        <div class="swiper new-album-swiper">
          <div id="new-album-container" class="swiper-wrapper"></div>
        </div>
      </section>

      <!-- all album -->
      <section class="mt-18">
        <!-- head -->
        <div class="flex items-center gap-x-4 justify-between mb-8">
          <h3 class="font-Pelak_Bold text-xl">تمامی آلبوم‌ها</h3>
          <div class="flex gap-x-2 px-4 py-2.5 cursor-pointer items-center bg-Neutral-900 border border-Neutral-100 rounded-lg">
            <cite class="font-Pelak_Medium text-base not-italic">محبـوب‌‌ترین</cite>
            <svg class="size-5"><use href="#chevron-down"></use></svg>
          </div>
        </div>
        <!-- body -->
        <div id="all-album-container" class="flex flex-wrap items-center justify-center gap-x-5 gap-y-6"></div>

        <div id="add-album-btn" class="flex items-center justify-center size-10 border border-Neutral-200 rounded-full mt-19 mx-auto cursor-pointer">
            <svg class="size-5"><use href="#chevron-double-down"></use></svg>
        </div>
      </section>
    </main>

    <%- include('../partials/footer.ejs') %>

    <script src="/scripts/swiper/swiper.js"></script>
    <script src="/scripts/swiper/slider.js"></script>
    <script src="/scripts/albums/album.js"></script>
    <script src="/scripts/navbar/music/navbar.js"></script>
  </body>
</html>
